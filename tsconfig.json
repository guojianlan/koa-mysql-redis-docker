{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "declaration": false,
      "experimentalDecorators": true,
      "sourceMap": false,
      "outDir": "./node/server", // TS文件编译后会放入到此文件夹内
      "baseUrl": ".",
      "typeRoots": [
          "./node_modules/@types/",
          "./types/**/*"
      ],
      "paths": {
          "*": [
              "./node_modules/@types/*",
              "*",
          ]
      }
  },
  "include": [
      "./node/server_ts/**/*",
      "./types/**/*.ts"
  ],
  "exclude": [
      "./node_modules"
  ]
}